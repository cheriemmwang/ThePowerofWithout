doctype html
html 
  head 
    include includes/head.pug
    title The Power of Without
    link(rel='stylesheet', href='https://unpkg.com/leaflet@1.6.0/dist/leaflet.css')
    script(src='https://unpkg.com/leaflet@1.6.0/dist/leaflet.js')
    link(rel="stylesheet" href="/dist/css/form.css")
  body 
    - let activeTab = 2;
    include includes/nav.pug
    .columns.is-variable.is-8
      .column.is-narrow
        a.active(onclick = "goToSection(1)") <span>Ge</span>neral
        br
        a(onclick = "goToSection(2)") <span>Si</span>te
        br
        a(onclick = "goToSection(3)") <span>Ar</span>chitecture
        br
        a(onclick = "goToSection(4)") <span>Po</span>pulation
      .column.is-5
        form(action = "/api/settlements" method = "POST")
          //- General 
          section 
            label(for = "settlement") Name of the Informal Settlement:
            br
            input(name = "settlement" type = "text")
            br  
            
            label(for = "city") Name of the City:
            br
            input(name = "city" type = "text")
            br  
            
            label(for = "country") Name of the Country:
            br
            input(name = "country" type = "text")
            br  
            
            label(for = "geolocation") Coordinates</i>
            br
            input#coords(name = "geolocation" type = "text" disabled placeholder = "Select a point on the map")
            br 
            
            label(for = "email") Email Address: <i class = "fas fa-info-circle"></i>
            br
            input(name = "email" type = "text")
            br 
            
            .button-level 
              a.button.is-black(onclick = "goToSection(2)") Next Section
              
          //- Site  
          section.is-hidden 
            label Origin: Historical evolution of the settlement
            br
            each val, index in ["Squatting", "Refugee Camp", "Illegal Subdivision", "Other"]
              input(type = "radio" name = "siteOriginCauses" id = "siteOriginCauses-" + index value = val)
              label(for = "siteOriginCauses-" + index)= val
              br
            
            br
            label Geolocation: In which Continent is the settlement located
            br    
            each val, index in ['Africa', 'Europe', 'North America', 'South America', 'Asia', 'Oceania', 'Antarctica']
              input(type = "radio" name = "siteOriginGeolocation" id = "siteOriginGeolocation-" + index value = val)
              label(for = "siteOriginGeolocation-" + index)= val
              br
            
            br  
            label(for = "siteOriginPopulation") Population: Aprox. number of people living in the Settlement
            br
            input(name = "siteOriginPopulation" type = "text")
            br 
            
            label Topography: Geographical features of the location of the Settlement 
            br    
            each val, index in ["By the coast", "Desert", "Valley", "Mountain", "Forest", "Water"]
              input(type = "radio" name = "siteGeographyTopography" id = "siteGeographyTopography-" + index value = val)
              label(for = "siteGeographyTopography-" + index)= val
              br
            
            br
            label Within cities: Relationship between the settlement geolocation and the city of reference
            br    
            - var data = ["Squatting on the fringe", "In the path of development", "In the heart of the city", "Along railway tracks", "Residential centers", "Suburban industrial areas", "Old city slum"]
            each val, index in data
              input(type = "radio" name = "siteGeographyWithinCities" id = "siteGeographyWithinCities-" + index value = val)
              label(for = "siteGeographyWithinCities-" + index)= val
              br
            
            br
            label Climate
            br    
            each val, index in ["Tropical (Type A)", "Arid (Type B)", "Temperate (Type C)", "Continental (Type D)", "Polar (Type E)"]
              input(type = "radio" name = "siteGeographyClimate" id = "siteGeographyClimate-" + index value = val)
              label(for = "siteGeographyClimate-" + index)= val
              br
                
            //- TODO: add prevalence
            
            br
            label Security: Level of crime and insecurity in the Settlement
            br    
            each val, index in ["Low crime rate", "Moderate crime rate", "High crime rate"]
              input(type = "radio" name = "siteVulnerabilitySecurityCrimeRate" id = "siteVulnerabilitySecurityCrimeRate-" + index value = val)
              label(for = "siteVulnerabilitySecurityCrimeRate-" + index)= val
              br
            
            .button-level
              a.button.is-light(onclick = "goToSection(1)") Previous Section
              a.button.is-black(onclick = "goToSection(3)") Next Section
              
          //- Architecture  
          section.is-hidden
            p Architecture  
            .button-level
              a.button.is-light(onclick = "goToSection(2)") Previous Section
              a.button.is-black(onclick = "goToSection(4)") Next Section
              
          //- Population 
          section.is-hidden
            p Population  
            .button-level
              a.button.is-light(onclick = "goToSection(3)") Previous Section
              input.button.is-black(type="submit" value="Submit")
          
      .column
        section
          #map
        section.is-hidden 
          p Site 
        section.is-hidden 
          p Architecture
        section.is-hidden 
          p Population
    script(src = "/src/js/form.js")
    
